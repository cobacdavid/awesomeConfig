configecrans = wibox.widget {
      text         = ">> Infos <<",
      widget       = wibox.widget.textbox,
      visible      = true,
      align        = "center",
      forced_width = 100
}

function choisisCommande ( indice )
   return { #commandes , commandes[1+indice] }
end


indiceInfos = -1
configecrans:connect_signal( "button::press",
			     function()
				local commandes = {
				   monIP,
				   monIPInternet,
				   configEcrans,
				   versionLinux,
				   versionDistrib,
				   "sensors"
				}
				--
				indiceInfos = ( indiceInfos + 1 ) % #commandes
				-- montre( c )
				local c = commandes[1+indiceInfos]
				local texte = execute_command( c )
				-- montre(texte)
				configecrans.text  = texte
			     end
)

